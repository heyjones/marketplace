<h2><%= @vendor.name %></h2>

<h3><%= @product.title %></h3>

<%= form_tag(vendor_product_path(@vendor.id, @product.id), method: :put) do %>
	<div class="form-group">
		<label for="title">Title</label>
		<input type="text" name="title" placeholder="Title" class="form-control" value="<%= @product.title %>">
	</div>
	<div class="form-group">
		<label for="body_html">Description</label>
		<textarea name="body_html" rows="5" class="form-control"><%= @product.body_html %></textarea>
	</div>
	<input type="submit" value="Save" class="btn btn-primary">
<% end %>

<h3>Inventory & Variants</h3>

<table class="table table-variants">
	<thead>
		<tr>
			<th></th>
			<th style="width: 50%;">Title</th>
			<th style="width: 50%;">SKU</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
		<% @product.variants.each do |variant| %>
			<tr>
				<td>
					<% unless variant.image_id.nil? %>
					<% else %>
						<i class="fa fa-fw fa-camera"></i>
					<% end %>
				</td>
				<td><%= variant.title %></td>
				<td><%= variant.sku %></td>
				<td><%= number_to_currency(variant.price) %></td>
			</tr>
		<% end %>
	</tbody>
</table>